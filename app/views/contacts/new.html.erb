<div class="container" style="padding-bottom: 100px;">
	
	<h1>Contact Us</h1>
	<hr />
  <h5>Simply fill out the form</h5>
	<%= render 'shared/errors', obj: @contact %>

	<% if @contact.errors.any? %>
	<h2>The following errors prevented user creation</h2>
	<ul style="margin-bottom: 50px;">
	  <% @contact.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	  <% end %>
	</ul>
	<% end %>

	<div class="row">
  <div class="col-md-6">
    <%= form_for(@contact, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="row">
        <div class="col-md-12">
          <div class="control-label col-sm-12">
            <%= f.label "Name *", style: "font-weight:bold;" %>
          </div>
          <div class="col-md-12">
            <%= f.text_field :name, class: "form-control", placeholder: "Enter Name", autofocus: true %>
          </div>
        </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
        <div class="col-md-12">
          <div class="control-label col-sm-12">
            <%= f.label "Email *", style: "font-weight:bold;" %>
          </div>
          <div class="col-md-12">
            <%= f.text_field :email, class: "form-control", placeholder: "Email Address" %>
          </div>
        </div>
        </div>
      </div>


      <div class="form-group">
        <div class="row">
          <div class="col-md-12">
            <div class="control-label col-md-12">
              <%= f.label "Phone Number *", style: "font-weight:bold;" %>
            </div>
            <div class="col-md-12">
              <%= f.text_field :phone, class: "form-control", placeholder: "Enter Phone Number" %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-md-12">
            <div class="control-label col-md-12">
              <%= f.label "Organization/business *", style: "font-weight:bold;" %>
            </div>
            <div class="col-md-12">
              <%= f.text_field :organization, class: "form-control", placeholder: "Enter Your Organization" %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
           <div class="col-md-12">
            <div class="control-label col-md-12">
              <%= f.label "Message.Comment *", style: "font-weight:bold;" %>
            </div>
            <div class="col-md-12">
              <%= f.text_area :message, rows: 10, class: "form-control", placeholder: "Enter Your Message Here" %>
            </div>
          </div>
        </div>
      </div>


      <br /><br />
    <div class="form-group">
        <div class="col-md-12">
          <%= f.submit "Send Email", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
      <br /><br />
      
    <% end %>
  </div>



  <div class="col-md-6">
    <div class="card bg-light col-md-11 offset-md-1 contact-card">
      <div class="card-body">
        <h5 class="card-title">How Can We Help?</h5>
        <p class="card-text">Here at Minimise we pride ourselves on finding solutions and we are happy to answer questions and help however possible.</p>
        <br />
        <h5 class="card-title">Give Us A Call</h5>
        <h6>1-888-841-1840</h6>
        <br /><br />
        <h5 class="card-title">Email Us</h5>
        <p class="card-text"><%= link_to "info@minimiseusa.com", "mailto:info@minimiseusa.com" %></p>
      </div>
    </div>

    <div class="card bg-light col-md-11 offset-md-1">
      <div class="card-body">
        <h5 class="card-title">Hillsborough County Public Schools</h5>
        <p class="card-text">If you are an employee of HCPS, please sumbit a maintenance request here.</p>
        
        <p class="card-text"><%= link_to "Maintenance Requests", maintenance_path %></p>
      </div>
    </div>
  </div>

</div>


</div>