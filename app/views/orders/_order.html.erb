<% @orders.each do |order| %>

<div class="well well-sm" style="padding-bottom: 15px; padding-top: 15px;">
	<div class="row">
		<div class="col-sm-12"><span class="bold">Request Number:&nbsp;&nbsp;&nbsp;</span><%= order.id %></div>
		<div class="col-sm-12"><span class="bold">Maintenance Request Type:&nbsp;&nbsp;&nbsp;</span><%= order.order_type %></div>
		<div class="col-sm-12"><span class="bold">Emergency Lighting:&nbsp;&nbsp;&nbsp;</span><%= order.emergency_lights %></div>
	</div>
	<hr />
	<div class="row">
		<div class="col-sm-12"><span class="bold">Location Requested:&nbsp;&nbsp;&nbsp;</span><%= order.location.name %> <%= order.location.sc_type %></div>
		<div class="col-sm-12"><span class="bold">Building Info:&nbsp;&nbsp;&nbsp;</span><%= order.facility_info %></div>
	</div>
	<hr />
	<div class="row">
		<div class="col-sm-12">
			<p class="bold" style="margin-bottom: 0px;">Actions</p>
			<div class="col-sm-10">
				<%= link_to "View", order_path(order), class: "badge badge-success" %>
				<%= link_to "Edit", edit_order_path(order), class: "badge badge-warning" %>
				<%= link_to 'Delete', order_path(order), method: :delete, data: {confirm: "Are you sure you want to delete this maintenance request?"}, class: "badge badge-danger" %>
			</div>
		</div>
	</div>
</div>



<br />

<% end %>