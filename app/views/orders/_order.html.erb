<% obj.each do |order| %>

<div class="well well-sm" style="padding-bottom: 15px; padding-top: 15px;">
	<div class="row">

		<div class=" col col-sm-10">
			<span class="bold">Request Number:&nbsp;&nbsp;&nbsp;</span><%= order.id %><br />
			<span class="bold">Request Type:&nbsp;&nbsp;&nbsp;</span><%= order.order_type %><br />
			<span class="bold">Emergency Lighting:&nbsp;&nbsp;&nbsp;</span><%= order.emergency_lights %>
		</div>
		<div class=" col col-sm-2">
			<% if order.completed? %>
				<div class="is_complete"><%= image_tag("complete.png") %></div>
			<% end %>
		</div>
	</div>	
	
	<hr />
	<div class="row">
		<div class="col-sm-12"><span class="bold">Location Requested:&nbsp;&nbsp;&nbsp;</span><%= link_to "#{order.location.name} #{order.location.sc_type}", location_path(order.location), style: "color:inherit; text-decoration:underline;" %></div>
		<div class="col-sm-12"><span class="bold">Building Info:&nbsp;&nbsp;&nbsp;</span><%= order.facility_info %></div>
	</div>
	<hr />
	<div class="row">
		<div class="col-sm-12">
			<p class="bold" style="margin-bottom: 0px;">Actions</p>
			<div class="col-sm-10">
				<%= link_to "View Request", order_path(order), class: "badge badge-success" %>&nbsp;
				<%= link_to "Edit Request", edit_order_path(order), class: "badge badge-warning" %>&nbsp;
				<% if current_user.admin? %>
					<%= link_to 'Delete', order_path(order), method: :delete, data: {confirm: "Are you sure you want to delete this maintenance request?"}, class: "badge badge-danger" %>
				<% end %>
			</div>
		</div>
	</div>
</div>



<br />

<% end %>