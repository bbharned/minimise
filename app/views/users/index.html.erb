<div class="container">
<div class="row">
	<div class="col-md-8">
<h1>Minimise Users</h1>
	</div>
	<div class="col-md-4" align="right">
		<%= link_to "Add New User", new_user_path, class: "btn btn-primary" %>
	</div>
</div>
<hr />



<% @users.each do |u| %>
	
	<div class="well well-sm">
		<div class="row">
			<div class="col-md-4">
				<%= u.firstname %> <%= u.lastname %>
			</div>
			<div class="col-md-5">
				<%= u.company %>
			</div>
			<div class="col-md-1">
				<%= link_to "Show", user_path(u) %>
			</div>
			<div class="col-md-1">
				<%= link_to "Edit", edit_user_path(u) %>
			</div>
			<div class="col-md-1">
				<%= link_to "Delete", user_path(u) %>
			</div>
		</div>
	</div>


<% end %>




</div>