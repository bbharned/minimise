<% if @user.errors.any? %>
<h2>The following errors prevented user creation</h2>
<ul style="margin-bottom: 50px;">
	<% @user.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
	<% end %>
</ul>
<% end %>
<div class="row">
	<div class="col-sm-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			
			<div class="form-group">
				<div class="row">
				<div class="col col-sm-6">
					<div class="control-label col-sm-6">
						<%= f.label "First Name", style: "font-weight:bold;" %>
					</div>
					<div class="col-sm-12">
						<%= f.text_field :firstname, class: "form-control", placeholder: "First Name", autofocus: true %>
					</div>
				</div>
				<div class="col">
					<div class="control-label col-sm-6">
						<%= f.label "Last Name", style: "font-weight:bold;" %>
					</div>
					<div class="col-sm-12">
						<%= f.text_field :lastname, class: "form-control", placeholder: "Last Name" %>
					</div>
				</div>
				</div>
			</div>
			
			
			<div class="form-group">
				<div class="row">
					<div class="col col-sm-6">
						<div class="control-label col-sm-6">
							<%= f.label :email, style: "font-weight:bold;" %>
						</div>
						<div class="col-sm-12">
							<%= f.email_field :email, class: "form-control", placeholder: "Email Address" %>
						</div>
					</div>
					<div class="col col-sm-6">
						<div class="control-label col-sm-6">
							<%= f.label :company, style: "font-weight:bold;" %>
						</div>
						<div class="col-sm-12">
							<%= f.text_field :company, class: "form-control", placeholder: "Company Name" %>
						</div>
					</div>
				</div>
			</div>

			
			<br />
			<div class="form-group">
				<div class="row">
					<div class="col-sm-4">
						<div class="control-label col-sm-12">
							<%= f.label :password, style: "font-weight:bold;" %>
						</div>
						<div class="col-sm-12">
							<%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="control-label col-sm-12">
							<%= f.label "Confirm password", style: "font-weight:bold;" %>
						</div>
						<div class="col-sm-12">
							<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Re-Enter Password" %>
						</div>
					</div>
				</div>
			</div>
			<br />
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>
			</div>
			<br /><br />
			<hr />
	</div>
</div>
			

			
			

			
		<% end %>

		<p align="center"><br /><%= link_to "Back to Users", users_path, class: "btn btn-primary" %></p>

	</div>
</div>