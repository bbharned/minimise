<%= render 'shared/errors', obj: @location %>

<%= form_for(location) do |f| %>

  <div class="field">
    <%= f.label :scl_ref %>
    <%= f.text_field :scl_ref %>
  </div>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "School Type" %>
    <%= f.text_field :sc_type %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :area %>
    <%= f.text_field :area %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
