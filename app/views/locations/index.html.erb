<div class="container">


<div class="row">
<div class="col-md-8">
<h1>HCPS Locations</h1>
  </div>
  <div class="col-md-4" align="right">
    <%= link_to "Add New Location", new_location_path, class: "btn btn-primary" %>
  </div>
</div>
<hr />
<br />


  
    <% @locations.each do |location| %>
    <div class="row">
        <div class="well location-sum col-md-12">
          <h4><%= location.name %></h4>
        <div class="col col-md-10 offset-md-1">
          <h6>Reference ID#:&nbsp;&nbsp;&nbsp;<span style="font-weight:lighter;"><%= location.scl_ref %></span></h6>
          <h6>School Type:&nbsp;&nbsp;&nbsp;<span style="font-weight:lighter;"><%= location.sc_type %></span></h6>
          <h6>School Area:&nbsp;&nbsp;&nbsp;<span style="font-weight:lighter;"><%= location.area %></span></h6>
          <h6>School Address:&nbsp;&nbsp;&nbsp;<span style="font-weight:lighter;"><%= location.address %></span></h6>
          <p><%= link_to 'Show', location %> &nbsp;|&nbsp; <%= link_to 'Edit', edit_location_path(location) %> &nbsp;|&nbsp; <%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure you want to delete this location?' } %></p>
        </div>
        </div>
      
    </div>
  <% end %>




</div>