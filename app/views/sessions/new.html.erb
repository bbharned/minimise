<div class="container">
<h1 class="header">Minimise Log In</h1>
<hr />
<br />

<div class="row">
	<div class="col-sm-12">
		<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
			
			<div class="form-group">
				<div class="row">
					<div class="col col-lg-6 offset-lg-3">
						<div class="control-label col-lg-12">
							<%= f.label :email, style: "font-weight:bold;" %>
						</div>
						<div class="col-lg-12">
							<%= f.email_field :email, class: "form-control", placeholder: "Enter Email", autofocus: true %>
						</div>
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="row">
					<div class="col col-lg-6 offset-lg-3">
						<div class="control-label col-lg-12">
							<%= f.label :password, style: "font-weight:bold;" %>
						</div>
						<div class="col-lg-12">
							<%= f.password_field :password, class: "form-control", autocomplete: "off" %>
						</div>
					</div>
				</div>
			</div>
			
			<br />
			
			<div class="form-group">
				<div class="col-lg-6 offset-lg-3">
					<span class="goAway">&nbsp;&nbsp; </span><%= f.submit "Log In", class: "btn btn-primary btn-lg" %> &nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Cancel", root_path %>
				</div>
			</div>
			<% end %>
	</div>
</div>











</div>